{
  "name": "marketplace-kit",
  "version": "0.1.5",
  "description": "Marketplace Kit for tailwind",
  "main": "plugin.js",
  "scripts": {
    "build": "node ./build.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write --loglevel=error . !CHANGELOG.md",
    "test": "jest",
    "test:watch": "jest --watch",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin main && npm publish",
    "watch": "node build-watch.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run build && npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/savyjs/tailwind-marketplace-kit.git"
  },
  "bugs": {
    "url": "https://github.com/savyjs/tailwind-marketplace-kit/issues"
  },
  "homepage": "https://github.com/savyjs/tailwind-marketplace-kit#readme",
  "keywords": [
    "create-tailwind-plugin",
    "tailwind-css-plugin",
    "tailwindcss",
    "plugin"
  ],
  "author": "savy",
  "license": "MIT",
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-matcher-css": "^1.1.0",
    "lint-staged": "^10.5.2",
    "lodash": "^4.17.20",
    "postcss": "^8.1.9",
    "postcss-import-ext-glob": "^2.1.1",
    "postcss-watch-folder": "^2.0.0",
    "prettier": "^2.2.0",
    "standard-version": "^9.1.0",
    "tailwindcss": "^3.2.4"
  },
  "dependencies": {
    "autoprefixer": "^10.4.13",
    "chokidar": "^3.5.3",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-js": "^4.0.0",
    "postcss-nested": "^6.0.0",
    "postcss-nesting": "^10.2.0"
  }
}
